<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_numberA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Informe o primeiro numero"
        android:textAlignment="center"
        android:inputType="number"
        android:maxLength="2"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_calculate"/>

    <EditText
        android:id="@+id/edit_numberB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Informe o segundo numero"
        android:textAlignment="center"
        android:inputType="number"
        android:maxLength="2"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_numberA"/>

    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Calcular"
        app:layout_constraintTop_toBottomOf="@id/edit_numberB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Resultado:"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/btn_calculate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_soma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="soma"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/text_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="sub"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/text_soma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="divisao"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/text_sub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_mult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="mult"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/text_div"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>